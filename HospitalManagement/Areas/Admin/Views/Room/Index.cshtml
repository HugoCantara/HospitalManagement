@model PagedResult<HospitalManagement.ViewModels.RoomViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewTitleConstants.ROOM_INDEX</h1>

<p>
    <a asp-action="Create">@ButtonNameConstants.CREATE_NEW</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@GridviewColumnsConstants.ROOM_ID</th>
            <th>@GridviewColumnsConstants.HOSPITAL_NAME</th>
            <th>@GridviewColumnsConstants.ROOM_NUMBER</th>
            <th>@GridviewColumnsConstants.ROOM_TYPE</th>
            <th>@GridviewColumnsConstants.ROOM_STATUS</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hospital.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink(ButtonNameConstants.EDIT, ActionNameConstants.EDIT, new {  id=item.Id  }) |
                @Html.ActionLink(ButtonNameConstants.DETAILS, ActionNameConstants.DETAILS, new { id=item.Id }) |
                @Html.ActionLink(ButtonNameConstants.DELETE, ActionNameConstants.DELETE, new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

@*cloudscribe Pagination*@
<cs-pager 
    cs-paging-pagesize=(int)Model.PageSize
    cs-paging-pagenumber=(int)Model.PageNumber
    cs-paging-totalitems=(int)Model.TotalItems
    cs-pagenumber-param="pageNumber"
    asp-controller="Room"
    asp-action="Index"
    cs-pager-li-current-class="page-item active"
    cs-pager-li-other-class="page-item"
    cs-pager-li-non-active-class="page-item disabled"
    cs-pager-link-current-class="page-link"
    cs-pager-link-other-class="page-link">
</cs-pager>
